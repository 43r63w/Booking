@model RegisterVM



<div style="margin-left:500px;" class="card  w-50 border-0 p-5">

    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Register</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4 border">
        <form class="row" method="post" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                <input type="email" asp-for="Email" class="form-control" placeholder="Email">
            </div>


            <div class="input-group mb-3">
                <span class="input-group-text">First and Last name</span>
                <input asp-for="Name" type="text" class="form-control">
                <input asp-for="LastName" type="text" class="form-control">
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi bi-phone"></i></span>
                <input type="number" asp-for="PhoneNumber" class="form-control" placeholder="Phone number">
            </div>

            <div class="input-group mb-3">
                <input asp-for="Password" type="password" id="passwordInput" class="form-control" placeholder="Password" aria-label="Recipient's username" aria-describedby="basic-addon2">
                <button onclick="showPassword()" class="btn btn-outline-secondary" type="button"  id="showPasswordToggle">
                    <i class="bi bi-eye-slash" id="showPasswordIcon"></i>
                </button>
            </div>


            <div class="input-group mb-3">
                <input asp-for="ConfirmPassword" type="password" id="confirmPasswordInput" class="form-control" placeholder="Confirm Password" aria-label="Recipient's username" aria-describedby="basic-addon2">
                <button onclick="confirmShowPassword()" class="btn btn-outline-secondary" type="button" id="confirmShowPasswordToggle">
                    <i class="bi bi-eye-slash" id="confirmShowPasswordIcon"></i>
                </button>
            </div>

            <div class="col-12">
                <button type="submit" class="w-100 btn btn-lg btn-outline-success">Register</button>
            </div>
        </form>

        <hr />
        <a style="color:white;margin-left:300px;" asp-controller="Account" asp-action="Login">
            I Already have an account
        </a>

    </div>

</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js//showPassword.js"></script>
}
   
