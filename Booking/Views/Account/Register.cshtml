@model RegisterVM



<div style="margin-left:500px;" class="card  w-50 border-0 p-5">

    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Register</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4 border">
        <form class="row" method="post" asp-action="Register">
            <div class="form-floating mb-3 col-md-12">
                <input asp-for="User!.Email" class="form-control" aria-required="true" />
                <label class="ms-2 text-muted">Email</label>

            </div>
            <div class="form-floating mb-2 col-md-4">
                <input asp-for="User.LastName" class="form-control" />
                <label class="ms-2 text-muted">Last Name</label>
            </div>
            <div class="form-floating mb-2 col-md-4">
                <input asp-for="User!.Name" class="form-control" />
                <label class="ms-2 text-muted"> Name</label>
            </div>
            <div class="form-floating mb-2 col-md-4">
                <input asp-for="User.SurName" class="form-control" />
                <label class="ms-2 text-muted">Sur Name</label>
            </div>
            <div class="form-floating mb-3 col-md-12">
                <input asp-for="User.PhoneNumber" class="form-control" />
                <label class="ms-2 text-muted">Phone Number</label>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="User!.Password" class="form-control" />
                <label class="ms-2 text-muted">Password</label>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="User!.ConfirmPassword" class="form-control" />
                <label class="ms-2 text-muted">Confirm Password</label>
            </div>

            <div class="form-floating mb-3 col-md-12">
                <select asp-for="User.Role" asp-items="Model.RolesList" class="form-select">
                    <option disabled selected>-Select Role-</option>
                </select>
            </div>
            <div class="col-12">
                <button type="submit" class="w-100 btn btn-lg btn-outline-success">Register</button>
            </div>
        </form>

        <hr />
        <a style="color:white;margin-left:300px;" asp-controller="Account" asp-action="Login">
            I Already have an account
        </a>

    </div>

</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }


}